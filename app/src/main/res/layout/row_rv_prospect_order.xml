<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store name.."
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/initiatedBy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeName"
                android:textColor="#888"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:text="By Dax Amin" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:text="2 May 2018"
                android:textStyle="bold" />
            <!--<TableRow-->
                <!--android:id="@+id/hr"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginBottom="55dp"-->
                <!--android:layout_below="@+id/storeName"-->
                <!--android:layout_marginTop="24dp"-->
                <!--android:background="#444">-->
            <!--</TableRow>-->
        </RelativeLayout>
        <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#444">
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/targetvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#00897B"
                    android:layout_marginLeft="2dp"
                    android:text="Target Value " />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvalue"
                    android:gravity="center"
                    android:textColor="#00897B"
                    android:textStyle="bold"
                    android:text="35"
                    android:textSize="24sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/amountreached"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#00897B"
                    android:layout_marginLeft="2dp"
                    android:text="Amount Reached "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/avalue"
                    android:gravity="center"
                    android:textColor="#00897B"
                    android:textStyle="bold"
                    android:text="40"
                    android:textSize="24sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/remainingamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#00897B"
                    android:layout_marginLeft="2dp"
                    android:text="Remaining Amount " />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvalue"
                    android:gravity="center"
                    android:textColor="#00897B"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="24sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/hr1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444">
        </View>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/collaborators"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:text="4 Collaborators"
        android:textSize="24sp"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/items"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="4 Items"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_weight="1"
        />

</LinearLayout>
        <View
            android:id="@+id/hr2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444">
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:gravity="center"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/milesText"
                android:textColor="#00897B"
                android:textStyle="bold"
                android:gravity="center"
                android:text="0.8 miles"
                android:textSize="24sp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

