<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/type_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/received_sender"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Srujan"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/received_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="This is a random message as a receiver."
                android:layout_margin="4dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/type_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sent_sender"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Srujan"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/sent_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a random message as a sender."
                android:layout_margin="4dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>